@model List<LogsInfo>

@{
    ViewData["Title"] = "Записи";
    double sum = 0;
}

<div class="text-center grid text-center">
    <div class="card">
        <div class="card-body">
            <h1>Logs:</h1>
            @foreach (var item in Model)
            {
                {
                    sum += item.Sum;
                }

                <hr>
                <div class="card">
                    <div class="card-body">
                        <div class="strong">Индекс записи: @item.LogId </div>
                        <div>Оборудование: @item.UnitName</div>
                        <div>Клиент: @item.CustomerName</div>
                        <div>Была скидка в @item.DiscountForCustomer %</div>
                        <div>Начало работы: @item.End</div>
                        <div>Время окончания: @item.End</div>
                        <div>Проработано минут: @item.Minutes</div>

                        <div>Итоговая сумма: @item.Sum</div>
                    </div>
                </div>
            }
        </div>
    </div>
    <hr>
    <div>

        Итого было проведено операций на сумму: @sum.ToString("N2");
    </div>
</div>
